{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "LockerZ",
  "mainBinaryName": "LockerZ",
  "version": "0.2.6",
  "identifier": "lockerz",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LockerZ",
        "width": 1920,
        "height": 1080,
        "minHeight": 700,
        "minWidth": 1100,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "zoomHotkeysEnabled": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/zaphire"
    ],
    "resources": [
      "opencv_world4100.dll"
    ]
  }
}
